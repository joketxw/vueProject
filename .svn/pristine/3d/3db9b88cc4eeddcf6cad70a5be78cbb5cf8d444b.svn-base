@import "../../sass/conmon.scss";
@import "../../sass/icon.scss";
.content{
    background: #f7f7fa;
}
.mgTop{
    margin-top: toRem(7px);
}
.menuUl{
        height: toRem(45px);
        background: #fff;
       
        .active{
                color: #fa7319;
                border-bottom: toRem(2px) solid #fa7319;
        }
        li{
            flex: 1;
            text-align: center;
            line-height: toRem(45px);
            color: #3d3d3d;
            overflow: hidden;
            font-size: toRem(16px);
  
        }
}
.listDiv{
    .topDiv{
        height: toRem(38px);
        @include flex-pack-justify();
        background: #fff;
        .huiZ{
            background: no-repeat  center url(/static/images/personal/huiPic.png);
            background-size:100%;
            width: toRem(26px);
            height: toRem(26px);
            margin: 0 toRem(10px);
        }
        .huiT{
            color: #3d3d3d;
            font-size:toRem(14px);
            margin-right: toRem(8px);
        }
        .rightText{
            color: #ff3c36;
            font-size: toRem(14px);
            margin-right: toRem(10px);
        }
        
    }
    .contDiv{
        background: #f7f7f7;
        height:toRem(105px);
        overflow: hidden;
        .goodsPic{
          width: toRem(85px);
          height:toRem(85px);
          margin: 0 toRem(10px);
        }
        .contTbox{
            height:toRem(85px);
            font-size: toRem(12px);
            width: auto;
            .contT1{
                 @include overflowTwo();
                 line-height:toRem(16px);
            }
            .contT2{
                color: #999999;
                margin-top: toRem(10px);
                @include overflowTwo();
                line-height:toRem(16px);
            }
        }
        .numBox{
            width: toRem(80px);
            height:toRem(85px);
            text-align: center;
           
            .num1{
                font-size: toRem(18px);
                .num1Left{
                    font-size: toRem(14px);
                }
            }
            .num2{
                font-size: toRem(12px);
                margin-top:toRem(20px);
                color: #999999;
            }
        }
    }
    .settlementDiv{
        height:toRem(44px);
        line-height: toRem(44px);
        font-size: toRem(14px);
        text-align: right;
        background: #fff;
        .yellowBtn{
            height:toRem(30px);
            background: #fa7319;
            color: #fff;
            border: 0;
            border-radius: toRem(30px);
            padding: 0 toRem(10px);
            font-size: toRem(14px);
            margin-right: toRem(10px);
        }
        .btnOne{
            height:toRem(30px);
            background: #fff;
            color: #fa7319;
            border: #fa7319 1px solid;
            border-radius: toRem(30px);
            padding: 0 toRem(10px);
            font-size: toRem(14px);
            margin-right: toRem(10px);
        }
        .btnTwo{
            color: #3d3d3d;
            border: #c1c1c1 solid 1px;
            height:toRem(30px);
            background: #fff;
            border-radius: toRem(30px);
            padding: 0 toRem(10px);
            font-size: toRem(14px);
            margin-right: toRem(10px);
        }
        .btnThree{
            color: #3d3d3d;
            border: #c1c1c1 solid 1px;
            height:toRem(30px);
            background: #fff;
            border-radius: toRem(30px);
            padding: 0 toRem(10px);
            font-size: toRem(14px);
            margin-right: toRem(10px);
        }
    }
}
.borderTop{
    border-top: 1px solid #f2f2f5;
}